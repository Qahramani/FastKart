@model Product
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Category</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input asp-for="Name" class="form-control" placeholder="Price">
                    <span asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    @* <label asp-for="Price">Price</label> *@
                    <select asp-for="Selectitems" class="form-control" placeholder="Category"></select>
                    <span asp-validation-for="Selectitems"></span>
                </div>
                <div class="form-group">
                    <label>Upload Image</label>
                    <input type="file" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input asp-for="ImageFile" class="btn btn-primary">
                        @* <span class="input-group-append">
                        <button class="file-upload-browse btn btn-primary">Upload</button>
                        </span> *@
                    </div>
                    <span asp-validation-for="ImageFile"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light" asp-action="index">Cancel</button>
            </form>
        </div>
    </div>
</div>