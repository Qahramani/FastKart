@model List<Product>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">
                <a class="btn btn-info btn-lg" asp-action="create">Create</a>
            </h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Category.Name</td>
                                <td>@product.Description</td>
                                <td>@product.Price</td>
                                <td><img src="~/assets/images/fashion/product/@product.ImageUrl" /></td>
                                <td>
                                    <a class="btn btn-info btn-sm" asp-action="details" asp-route-id="@product.Id">Details</a>
                                    <a class="btn btn-warning btn-sm" asp-action="update" asp-route-id="@product.Id">Update</a>
                                    <a class="btn btn-danger btn-sm" asp-action="delete" asp-route-id="@product.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>