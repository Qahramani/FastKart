@model HomeBanner
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">New Home Banner</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title">Main Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>    
                </div>

                <div class="form-group">
                    <label asp-for="TopText">Top text</label>
                    <input asp-for="TopText" class="form-control" placeholder="text">
                    <span asp-validation-for="TopText" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BottomText">Bottom text</label>
                    <input asp-for="BottomText" class="form-control" placeholder="text">
                    <span asp-validation-for="BottomText" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>File upload</label>
                    @* <input asp-for="ImageFile" class="file-upload-default"> *@
                    @* <div class="input-group col-xs-12"> *@
                        <input asp-for="ImageFile" class="form-control file-upload-info" >
                        @* <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary">Upload</button>
                        </span> * *@
                     @* </div> *@
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light" asp-action="index">Cancel</button>
            </form>
        </div>
    </div>
</div>