@model List<Category>
<div class="col-lg-12 grid-margin stretch-card" >
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic Table</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td><img src="~/assets/svg/fashion/@category.ImageUrl"/></td>
                                <td>
                                    <a class="btn btn-info btn-sm" asp-action="details" asp-route-id="@category.Id">Details</a>
                                    <a class="btn btn-warning btn-sm" asp-action="update" asp-route-id="@category.Id">Update</a>
                                    <a class="btn btn-danger btn-sm" asp-action="delete" asp-route-id="@category.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>