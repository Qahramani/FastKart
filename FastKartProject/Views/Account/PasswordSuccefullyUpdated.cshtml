@{
    ViewBag.Title = "Reset Password Confirmation";
    Layout = null;
}

<h2>Password Reset Successful</h2>

<!-- Modal -->
<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Success</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (TempData["Message"] != null)
                {
                    <p>@TempData["Message"]</p>
                }
                <p>Your password has been changed successfully. You can now <a href="@Url.Action("Login", "Account")">log in</a>.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#successModal').modal('show'); // Show the modal on page load
    });
</script>
